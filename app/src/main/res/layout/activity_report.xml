<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:text="Report"
            android:layout_height="50dp"
            android:textAllCaps="true"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:textSize="@dimen/title"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="9dp"
            android:background="@color/colorAccent"
            />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_driver_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:paddingLeft="7dp"
                    android:paddingTop="10dp"
                    android:layout_gravity="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/driver_id"
                    android:visibility="invisible"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/lablesize1"/>

                <EditText
                    android:id="@+id/edt_driver_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:background="@null"
                    android:layout_marginRight="15dp"
                    android:hint="Enter Driver ID"
                    android:imeOptions="actionNext"
                    android:gravity="center"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textColor="@color/colorAccent"
                    android:paddingLeft="7dp"
                    android:textSize="@dimen/edittextsize"
                    android:inputType="number"
                    android:maxLength="20"
                    android:layout_margin="5dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/colorAccent"/>

                <TextView
                    android:id="@+id/txt_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:paddingLeft="7dp"
                    android:paddingTop="10dp"
                    android:layout_gravity="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="@string/date"
                    android:visibility="invisible"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/lablesize1"/>

                <EditText
                    android:id="@+id/edt_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:background="@null"
                    android:layout_marginRight="5dp"
                    android:hint="Select Date"
                    android:imeOptions="actionNext"
                    android:gravity="center"
                    android:textColorHint="@color/colorPrimaryDark"
                    android:textColor="@color/colorAccent"
                    android:paddingLeft="7dp"
                    android:textSize="@dimen/edittextsize"
                    android:layout_margin="5dp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@color/colorAccent"/>

                <TextView android:id="@+id/txt_get_report"
                    android:layout_width="match_parent"
                    android:text="Get Report"
                    android:layout_height="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="20dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/title"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="9dp"
                    android:background="@color/colorPrimary"
                    />
                <ListView android:id="@+id/lstreport"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:divider="@null"></ListView>
                </LinearLayout>

        </LinearLayout>
    </layout>