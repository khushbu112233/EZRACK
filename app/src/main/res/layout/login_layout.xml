<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:text="Welcome to EZRACK"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:textSize="@dimen/title"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="9dp"
            />
        <TextView
            android:id="@+id/txt_driver_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:paddingLeft="40dp"
            android:layout_gravity="left"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/driver_id"
            android:visibility="invisible"
            android:textColor="@color/black"
            android:textSize="@dimen/lablesize1"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp">
            <ImageView
                android:id="@+id/img_driver"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_alignParentLeft="true"
                android:src="@mipmap/driver_id" />
            <EditText
                android:id="@+id/edt_driver_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/driver_id"
                android:imeOptions="actionNext"
                android:gravity="left"
                android:layout_marginBottom="5dp"
                android:textColorHint="@color/black_opacity"
                android:textColor="@color/black"
                android:paddingLeft="50dp"
                android:textSize="@dimen/edittextsize"
                android:inputType="text"
                android:maxLength="20"
                android:layout_margin="5dp"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/black"/>


        <TextView
            android:id="@+id/txt_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:paddingLeft="55dp"
            android:layout_gravity="left"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Username"
            android:visibility="gone"
            android:textColor="@color/black"
            android:textSize="@dimen/lablesize1"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="2dp">
            <ImageView
                android:id="@+id/img_username"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_alignParentLeft="true"
                android:src="@mipmap/username" />
            <EditText
                android:id="@+id/edt_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="Username"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:gravity="left"
                android:textColorHint="@color/black_opacity"
                android:textColor="@color/black"
                android:paddingLeft="50dp"
                android:textSize="@dimen/edittextsize"
                android:maxLength="20"
                android:layout_margin="5dp"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:visibility="gone"
            android:background="@color/black"/>
        <TextView
            android:id="@+id/txt_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:paddingLeft="40dp"
            android:layout_gravity="left"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Password"
            android:visibility="invisible"
            android:textColor="@color/black"
            android:textSize="@dimen/lablesize1"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp">
            <ImageView
                android:id="@+id/img_password"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_alignParentLeft="true"
                android:src="@mipmap/password" />
            <EditText
                android:id="@+id/edt_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:inputType="textPassword"
                android:hint="Password"
                android:imeOptions="actionDone"
                android:gravity="left"
                android:layout_marginBottom="5dp"
                android:textColorHint="@color/black_opacity"
                android:textColor="@color/black"
                android:paddingLeft="50dp"
                android:textSize="@dimen/edittextsize"
                android:maxLength="20"
                android:layout_margin="5dp"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/black"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/txt_autoLoging"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="5dp"
                android:paddingLeft="7dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_gravity="left"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Auto Login"
                android:visibility="visible"
                android:textColor="@color/black"
                android:textSize="@dimen/lablesize1"/>

            <ImageView
                android:id="@+id/img_auto_loging"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/unswitch" />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/black"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/txt_Remember_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="5dp"
                android:paddingLeft="7dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_gravity="left"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Remember Me"
                android:visibility="visible"
                android:textColor="@color/black"
                android:textSize="@dimen/lablesize1"/>

            <ImageView
                android:id="@+id/img_remember_me"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/unswitch" />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/black"/>
        <TextView android:id="@+id/txt_login"
            android:layout_width="match_parent"
            android:text="LOGIN"
            android:layout_height="40dp"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:textSize="@dimen/title"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="9dp"
            android:background="@color/colorAccent"
            />
    </LinearLayout>

</layout>